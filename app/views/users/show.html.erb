<div class="row justify-content-center" id="single-article">
    <div class="col-12 col-xl-6 col-lg-8 ">
        <div>
            <h2 class="title my-2"> <%=@user.name%> </h2>
            <div class="my-4 row justify-content-between align-items-center">
                <div class="col-4">
                    <% if @user.icon_url%>
                    <%= image_tag(@user.icon_url, class:"profile-image") %>
                    <% else %>
                    <%= image_tag('placeholder-image.jpg', class:"profile-image") %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>